{
  "name": "@checkdigit/github-actions",
  "version": "1.0.1",
  "description": " Provides supporting operations for github action builds.",
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "prettier": "@checkdigit/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/github-actions.git"
  },
  "engines": {
    "node": ">=16"
  },
  "author": "Check Digit, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checkdigit/github-actions/issues"
  },
  "homepage": "https://github.com/checkdigit/github-actions#readme",
  "bin": {
    "action": "bin/action"
  },
  "files": [
    "/dist/",
    "/bin/"
  ],
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^19.0.7",
    "debug": "^4.3.4",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@checkdigit/eslint-config": "^7.5.0",
    "@checkdigit/prettier-config": "^3.2.0",
    "@types/debug": "^4.1.7",
    "@types/semver": "^7.3.13",
    "@types/uuid": "^9.0.0",
    "nock": "^13.3.0",
    "rimraf": "^4.1.2",
    "undici": "^5.18.0",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "dist": "rimraf dist && tsc --outDir dist && rimraf dist/*.spec.* dist/nocks",
    "prepublishOnly": "npm run dist",
    "lint": "eslint -f unix --ext .js,.ts src/**",
    "lint:fix": "eslint -f unix --ext .js,.ts src/** --fix",
    "prettier": "prettier --ignore-path .gitignore --list-different .",
    "prettier:fix": "prettier --ignore-path .gitignore --write .",
    "test": "npm run ci:compile && npm run ci:test && npm run ci:lint && npm run ci:style",
    "ci:compile": "tsc --noEmit",
    "ci:test": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest --coverage=false",
    "ci:coverage": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest --coverage=true",
    "ci:lint": "npm run lint",
    "ci:style": "npm run prettier"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "isolatedModules": true,
          "diagnostics": false,
          "useESM": true
        }
      ]
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/src/**/*.spec.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@checkdigit/eslint-config"
    ]
  },
  "peerDependencies": {
    "typescript": "^5.0.0-beta"
  },
  "overrides": {
    "ts-jest": {
      "typescript": "^5.0.0-beta"
    }
  }
}
